{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./out",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es2022"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
